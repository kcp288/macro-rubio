{
  "name": "Macro Rubio",
  "description": "Macro for Marco",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  }, 

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "marco.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}